<h1>Your Bookings</h1>

<% if @bookings && @bookings.any? %>
  <% @bookings.each do |booking| %>
    <div>
      <h2><%= booking.flat.address %></h2>
      <p>From: <%= booking.start_date %></p>
      <p>To: <%= booking.end_date %></p>

      <%= button_to 'Cancel Booking', booking_path(booking), method: :delete, data: { confirm: 'Are you sure you want to cancel this booking?' } %>
    </div>
  <% end %>
<% else %>
  <p>You have no bookings.</p>
<% end %>


<% @bookings.each do |booking| %>
  <% if booking.completed? && booking.review.nil? %>
    <%= link_to "Leave a Review", new_flat_booking_review_path(booking.flat, booking) %>
  <% end %>
<% end %>
