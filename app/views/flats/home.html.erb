<section class="search-section centered-search-form">
    <div class="search-container">
      <header id="centered-header">
        <h3>experience the world, one stay at a time</h3>
      </header>
      <form action="#" method="get" id="search-form">
        <div class="input-container">
          <input class="neomorphic-input date-input datepicker" type="text" name="check_in" id="check-in-input" placeholder="Check-in">
          <input class="neomorphic-input date-input datepicker" type="text" name="check_out" id="check-out-input" placeholder="Check-out">
          <input class="neomorphic-input" type="text" name="location" id="location-input" placeholder="Location">
        </div>
      </form>
    </div>
  </section>

  <section class="flat-grid-section">
    <div class="flat-grid-container">
      <div class="flat-card">
        <img src="<%= asset_path('placeholder.jpg') %>" alt="Placeholder">
        <h3>cozy apartment</h3>
        <p>studio in the heart of the city.</p>
        <span>$120 | night</span>
      </div>

      <div class="flat-card">
        <img src="<%= asset_path('placeholder.jpg') %>" alt="Placeholder">
        <h3>apartment</h3>
        <p>holiday home for you and your family</p>
        <span>$90 | night</span>
      </div>

      <div class="flat-card">
        <img src="<%= asset_path('placeholder.jpg') %>" alt="Placeholder">
        <h3>studio</h3>
        <p>studio at the outskirts of town.</p>
        <span>$85 | night</span>
      </div>

      <div class="flat-card">
        <img src="<%= asset_path('placeholder.jpg') %>" alt="Placeholder">
        <h3>two story flat</h3>
        <p>luxurious apartment with a view</p>
        <span>$165 | night</span>
      </div>
    </div>
  </section>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <script>
    $(function() {
      $(".datepicker").datepicker({
        dateFormat: "yy-mm-dd"
      });
    });

    document.addEventListener("DOMContentLoaded", function () {
      const searchForm = document.getElementById("search-form");
      const flatGridSection = document.querySelector(".flat-grid-section");

      searchForm.addEventListener("keydown", function (event) {
        if (event.key === "Enter") {
          event.preventDefault(); // Prevent the form from submitting

          // Scroll to the flat grid section
          flatGridSection.scrollIntoView({ behavior: "smooth" });
        }
      });
    });
  </script>
