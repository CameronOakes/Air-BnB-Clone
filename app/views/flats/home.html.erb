<script>
 const watermark = document.getElementById('watermark');
  let watermarkSize = 750;
  let watermarkOpacity = 0.5;

  window.addEventListener('scroll', () => {
    const scrollPosition = window.scrollY;
    const newSize = 750 + scrollPosition * 1;
    watermarkSize = Math.min(newSize, 2000);
    watermark.style.width = `${watermarkSize}px`;
    watermark.style.height = `${watermarkSize}px`;

    const newOpacity = Math.max(0.25 - scrollPosition * 0.0002, 0);
    watermarkOpacity = newOpacity;
    watermark.style.opacity = watermarkOpacity;
  });
</script>
