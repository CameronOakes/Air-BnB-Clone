<section class="search-section centered-search-form">
  <div class="search-container">
    <header id="centered-header">
      <h1>Experience the World, One Stay at a Time</h1>
    </header>
    <form action="/search" method="get" id="search-form">
      <div class="input-container">
        <label for="check-in-input">Check-in</label>
        <input class="neomorphic-input date-input datepicker" type="text" name="check_in" id="check-in-input" placeholder="Select date">

        <label for="check-out-input">Check-out</label>
        <input class="neomorphic-input date-input datepicker" type="text" name="check_out" id="check-out-input" placeholder="Select date">

        <label for="location-input">Location</label>
        <input class="neomorphic-input" type="text" id="location-input" placeholder="Enter location">

        <button class="neomorphic-button search-button" type="submit" id="search-button">Search</button>
      </div>
    </form>
  </div>
</section>

