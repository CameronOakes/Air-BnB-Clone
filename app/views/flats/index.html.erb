<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-3">
        <div class="flat-card">
          <%= cl_image_tag flat.photo.key, class: "card-img-top" %>
          <div class="card-body" style="display: flex; flex-direction: column; align-items: center; justify-content: center;">
            <h5 class="flat-address neomorphic-input-label" style="text-align: center;"><%= flat.address %></h5>
            <p class="card-text neomorphic-input-label" style="text-align: center;">Price | <%= flat.price %></p>
            <p class="card-text neomorphic-input-label" style="text-align: center;">Capacity | <%= flat.capacity %></p>
          </div>
          <div class="card-body" style="display: flex; flex-direction: column; align-items: center; justify-content: center;">
            <%= link_to 'View', flat_path(flat), class: "neomorphic-button" %>
            <%= link_to 'Edit', edit_flat_path(flat), class: "neomorphic-button" %>
            <%= button_to 'Delete', flat_path(flat), method: :delete, data: { confirm: 'Are you sure?' }, class: "neomorphic-button" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
