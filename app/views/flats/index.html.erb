<section class="search-section centered-search-form">
    <div class="search-container">
        <header id="centered-header">
            <h1>All Flats</h1>
        </header>

        <div class="input-container">
            <%= link_to 'New Flat', new_flat_path, class: "neomorphic-button search-button" %>

            <ul class="flats-list">
                <% @flats.each do |flat| %>
                    <li class="flat-item">
                        <div class="flat-address"><%= flat.address %></div>
                        <div class="flat-price"><%= flat.price %></div>
                        <div class="flat-capacity"><%= flat.capacity %></div>
                        <div class="flat-actions">
                            <%= link_to 'View', flat_path(flat), class: "neomorphic-button" %> |
                            <%= link_to 'Edit', edit_flat_path(flat), class: "neomorphic-button" %> |
                            <%= link_to 'Delete', flat_path(flat), method: :delete, data: { confirm: 'Are you sure?' }, class: "neomorphic-button" %>
                        </div>
                    </li>
                <% end %>
            </ul>
        </div>
    </div>
</section>
